<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E9EB"
    tools:context=".PhoneAuth">

    <Button
        android:id="@+id/buttonResend"
        android:layout_width="191dp"
        android:layout_height="53dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="112dp"
        android:backgroundTint="#687478"
        android:fontFamily="@font/autour_one"
        android:text="Resend"
        android:textColor="#E8E9EB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonVerifyPhone" />

    <EditText
        android:id="@+id/fieldPhoneNumber"
        android:layout_width="283dp"
        android:layout_height="56dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="44dp"
        android:ems="10"
        android:fontFamily="@font/autour_one"
        android:hint="Numero de Téléphone"
        android:inputType="phone"
        android:textColor="#FFFCFC"
        android:textColorHint="#687478"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonStartVerification"
        android:layout_width="175dp"
        android:layout_height="54dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="120dp"
        android:backgroundTint="#687478"
        android:fontFamily="@font/autour_one"
        android:text="Envoyer"
        android:textColor="#E8E9EB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fieldPhoneNumber" />

    <EditText
        android:id="@+id/fieldVerificationCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="132dp"
        android:ems="10"
        android:hint="CODE"
        android:inputType="number|textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonStartVerification" />

    <Button
        android:id="@+id/buttonVerifyPhone"
        android:layout_width="191dp"
        android:layout_height="53dp"
        android:layout_marginStart="108dp"
        android:layout_marginBottom="172dp"
        android:backgroundTint="#687478"
        android:fontFamily="@font/autour_one"
        android:text="Valider"
        android:textColor="#E8E9EB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/phoneAuthFields"
        android:layout_width="294dp"
        android:layout_height="59dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="38dp"
        android:fontFamily="@font/autour_one"
        android:text="Phone Authentification"
        android:textColor="#687478"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>